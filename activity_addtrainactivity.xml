<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="11dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        android:text="Train Number"
        app:layout_constraintEnd_toStartOf="@+id/chassisID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/chassisID" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="13dp"
        android:layout_marginStart="23dp"
        android:text="Manufacturer"
        app:layout_constraintBaseline_toBaselineOf="@+id/ManufacturerID"
        app:layout_constraintEnd_toStartOf="@+id/ManufacturerID"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Operator"
        app:layout_constraintBaseline_toBaselineOf="@+id/OperatorID"
        app:layout_constraintEnd_toEndOf="@+id/textView22"
        app:layout_constraintStart_toStartOf="@+id/textView20" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="No. of Carriages"
        app:layout_constraintBaseline_toBaselineOf="@+id/NumberOfCarriagesID"
        app:layout_constraintEnd_toStartOf="@+id/NumberOfCarriagesID" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:text="Route ID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <Button
        android:id="@+id/OkbuttonID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:text="Ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/CancelbuttonID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/chassisID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter Chassis Number"
        app:layout_constraintBottom_toTopOf="@+id/ManufacturerID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView5" />

    <EditText
        android:id="@+id/ManufacturerID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="123dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Manufacturer's Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView18"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/OperatorID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Operator's Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ManufacturerID" />

    <EditText
        android:id="@+id/NumberOfCarriagesID"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="57dp"
        android:layout_marginLeft="57dp"
        android:layout_marginRight="57dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="number"
        android:text="Number of Carriages"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView22"
        app:layout_constraintTop_toBottomOf="@+id/OperatorID" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="10dp"
        android:text="Business Class Capacity "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/businessCapID" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:text="Economy Class Capacity"
        app:layout_constraintBottom_toBottomOf="@+id/EcoCapID"
        app:layout_constraintEnd_toEndOf="@+id/textView21"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/CancelbuttonID" />

    <EditText
        android:id="@+id/businessCapID"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="132dp"
        android:layout_marginEnd="36dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="36dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="132dp"
        android:ems="10"
        android:inputType="number"
        android:text="Capacity"
        app:layout_constraintBottom_toBottomOf="@+id/OkbuttonID"
        app:layout_constraintEnd_toEndOf="@+id/RuutID"
        app:layout_constraintStart_toEndOf="@+id/textView23"
        app:layout_constraintTop_toBottomOf="@+id/OperatorID" />

    <EditText
        android:id="@+id/EcoCapID"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="number"
        android:text="Capacity"
        app:layout_constraintEnd_toEndOf="@+id/RuutID"
        app:layout_constraintStart_toEndOf="@+id/textView21"
        app:layout_constraintTop_toBottomOf="@+id/businessCapID" />

    <Spinner
        android:id="@+id/RuutID"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="68dp"
        android:layout_marginEnd="3dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="3dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/businessCapID"
        app:layout_constraintEnd_toEndOf="@+id/OperatorID"
        app:layout_constraintStart_toStartOf="@+id/NumberOfCarriagesID"
        app:layout_constraintTop_toBottomOf="@+id/OperatorID" />

</android.support.constraint.ConstraintLayout>